<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_fragment_github_user_list">

    <fragment
        android:id="@id/nav_fragment_github_user_list"
        android:name="com.orcchg.direcall.feature.github_user_list.impl.presentation.ui.GithubUserListFragment">

        <action
            android:id="@+id/nav_action_open_github_user_details"
            app:destination="@id/nav_fragment_github_user_details" />
    </fragment>

    <fragment
        android:id="@id/nav_fragment_github_user_details"
        android:name="com.orcchg.direcall.feature.github_user_details.impl.presentation.ui.GithubUserDetailsFragment">

        <argument
            android:name="login"
            app:argType="string"
            android:defaultValue="" />

        <action
            android:id="@+id/nav_action_open_github_repo_list"
            app:destination="@id/nav_fragment_github_repo_list" />
    </fragment>

    <fragment
        android:id="@id/nav_fragment_github_repo_list"
        android:name="com.orcchg.direcall.feature.github_repo.impl.presentation.ui.GithubRepoFragment">

        <argument
            android:name="login"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
